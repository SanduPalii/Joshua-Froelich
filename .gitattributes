# Line ending normalization
* text=auto

# Force LF for specific files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf
*.webp binary

# Audio files
*.mp3 binary
*.wav binary
*.ogg binary
*.flac binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Documents
*.pdf binary

# Video
*.mp4 binary
*.webm binary
*.mov binary
